<div class="container">
  <div class="col-md-12">

  <% if flash[:error] %>
  <div class="alert alert-danger" role="alert">
    <ul>
    <% flash[:error].each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <% if params[:action] == 'new' %>
    <%= form_for @hotspot_image, url: "/hotspot_images" do |f|  %>
    <div class="row">
      <div class="col-md-6">
        <%= f.label "hotspot_image[title]", "Title:" %>
        <%= f.text_field :title, class: "form-control" %>     
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
       <%= f.submit "Save", class: "btn btn-success" %>
      </div>
    </div>
    <% end %>  
  <% else %>
    <%= form_for @hotspot_image do |f|  %>
    <div class="row">
      <div class="col-md-6">
        <%= f.label "hotspot_image[title]", "Title:" %>
        <%= f.text_field :title, class: "form-control" %>     
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
       <%= f.submit "Save", class: "btn btn-success" %>
      </div>
    </div>
    <% end %>  
  <% end %>
  
</div>